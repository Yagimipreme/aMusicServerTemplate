{
  "manifest_version": 3,
  "name": "aMusicServer WebExt",
  "version": "1.0",
  "description": "Sends requests to your local music server",
  "permissions": ["scripting", "activeTab", "storage", "permissions"], 
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "http://192.168.*/*",
    "http://10.*/*",
    "http://172.16.*/*",
    "http://*.local/*"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "favicon_io/favicon-16x16.png",
      "32": "favicon_io/favicon-32x32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "amusicserver-webext@yagimipreme.com",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "service_worker": "background_service.js",
    "type": "module"
  }
}
