{  
  "manifest_version": 3,  
  "name": "HTTP Request Example",  
  "version": "1.0",  
  "description": "Sends an HTTP request to local server",  
  "permissions": ["scripting", "activeTab", "storage"],  //Storage to make server-ip editeable, activeTab for direct-use
  "host_permissions": [
    "http://192.168.*/*",
    "http://10.*/*",
    "http://172.16.*/*",
    "http://*.local" //so hostnames are available ie. "my_server"
    ], 
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "favicon_io/favicon-16x16.png",
      "32": "favicon_io/favicon-32x32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "dein-projektname@deine-domain.com",
    "strict_min_version": "109.0"
   }
  },
  "background": {  
    "service_worker": "background_service.js"  // Background service worker (replaces background pages in V3)  
  } 

}  
